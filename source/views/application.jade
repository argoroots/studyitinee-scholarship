script(type='text/ng-template', id='application')

  //- pre.row {{ application | json }}

  .row
    h1.col-xs-12.col-sm-10.col-sm-offset-1.text-center(ng-if='sponsor==="skype"') Skype’s Foreign Studies’ Master’s Scholarship 2015
    h1.col-xs-12.col-sm-10.col-sm-offset-1.text-center(ng-if='sponsor==="lhv"') LHV Bank Scholarship for ICT students 2015

  .row(ng-if='sponsor==="skype"')
    p.col-xs-12.col-sm-10.col-sm-offset-1.text-justify
      b Dear applicant
      br
      br
      | Here you can submit your application for Skype’s Foreign Studies’ Master’s Scholarship 2015. Please send your application by
      b  16 June 2015
      |  at the latest. Application can be submitted in English or Estonian.
      br
      br
      | If you have questions, please do not hesitate to contact us at
      a(href='mailto:info@studyitin.ee')  info@studyitin.ee
      | .

  .row(ng-if='sponsor==="lhv"')
    p.col-xs-12.col-sm-10.col-sm-offset-1.text-justify
      b Dear applicant
      br
      br
      | Here you can submit your application for LHV Bank Scholarship for ICT students 2015. Please send your application by
      b  19 June 2015
      |  at the latest. Application can be submitted in English or Estonian.
      br
      br
      | If you have questions, please do not hesitate to contact us at
      a(href='mailto:info@studyitin.ee')  info@studyitin.ee
      | .


    .spacer.col-xs-12

  form#application.row

    h2.col-xs-12.col-sm-10.col-sm-offset-1 Applicant

    .form-group.col-xs-12.col-sm-5.col-sm-offset-1
      label.control-label(for='forename') Forename
      input.form-control(id='forename', type='text', ng-model='application.forename.value', ng-blur='doSave($event)')

    .form-group.col-xs-12.col-sm-5
      label.control-label(for='surname') Surname
      input.form-control(id='surname', type='text', ng-model='application.surname.value', ng-blur='doSave($event)')


    .form-group.col-xs-12.col-sm-4.col-sm-offset-1
      label.control-label(for='phone') Phone
      input.form-control(id='phone', type='tel', ng-model='application.phone.value', ng-blur='doSave($event)')


